{  
    "version": "2.0.0",  
    "echoCommand": true,
    "tasks" : [
        {
            "label": "makercc",
            "type": "shell",
            "command": [
                "bin/pyside6-rcc"
            ],
            "windows": {
                "command": "bin\\pyside6-rcc.exe"
            },
            "args": [
                "resource.qrc",
                "-o",
                "resource_rc.py"
            ],
            "presentation": {
                "reveal": "never",
                "echo": true,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "makeui",
            "type": "shell",
            "command": [
                ".venv/bin/pyside6-uic"
            ],
            "windows": {
                "command": ".venv\\bin\\pyside6-uic.exe"
            },
            "args": [
                "mainwindow.ui",
                "-o",
                "mainwindow_ui.py"
            ],
            "presentation": {
                "reveal": "never",
                "echo": true,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "problemMatcher": []
        }
    ]
}